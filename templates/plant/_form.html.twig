{% block form_plant_popup %}
    <section id="plant-modal" class="ajout-plante">
        <div class="form-ajout">
            {{ form_start(form, { 'attr': { 'class': 'w-full max-w-sm mx-auto mt-20 space-y-3' } }) }}

            <fieldset class="file-box">
                <label for="plant_photos" id="imageLabel">
                    <img src="{{ asset('images/telecharger.png') }}" alt="" id="previewImage">
                </label>
                <span>Ajouter une image</span>
    {#            {{ form_widget(form.image, { 'attr': { 'title': 'image', 'accept': '.png,.jpeg,.jpg', 'multiple': 'multiple', 'onchange': 'handleFileSelect(event)' } }) }}#}
            </fieldset>

            <div class="fieldset-container">
                <fieldset>
                    {{ form_row(form.name) }}
                </fieldset>

                <fieldset>
                    {{ form_row(form.species) }}
                </fieldset>
            </div>

            <fieldset class="description">
                {{ form_widget(form.description) }}
            </fieldset>

            <button id="cancel-plant-button" type="submit" class="button">{{ button_label|default('Ajouter la plante') }}</button>

            {% if error %}
                {% from "parts/error.html.twig" import form_error %}
                {{ form_error(error.message) }}
            {% endif %}

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}