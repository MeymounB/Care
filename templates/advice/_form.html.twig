<section class="demande-conseil">
    <div class="form-conseil">
        <h1>Demande de conseil en ligne</h1>
        {{ form_start(form) }}
        <div class="fieldset-container">
            <fieldset>
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
            </fieldset>
            <fieldset class="plantes-selector">
                {{ form_label(form.plants) }}
                {{ form_widget(form.plants) }}
            </fieldset>
            <fieldset>
                {{ form_label(form.isPublic) }}
                {{ form_widget(form.isPublic) }}
            </fieldset>
        </div>
        <fieldset class="description">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </fieldset>
        <button id="button" type="submit" class="btn btn-secondary">Publier la demande</button>

        {% if error %}
            {% from "parts/error.html.twig" import form_error %}
            {{ form_error(error.message) }}
        {% endif %}
        {{ form_end(form) }}
    </div>
</section>

