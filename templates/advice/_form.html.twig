{{ form_start(form, { 'attr': { 'class': 'w-full max-w-sm mx-auto mt-20 space-y-3' } }) }}
<div class="rounded-md shadow-sm-space-y-px">
    {{ form_row(form.title, { 'label': 'Title', 'attr': { 'class': 'appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm' } }) }}

    {{ form_row(form.description, { 'label': 'Description', 'attr': { 'class': 'appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm' } }) }}

    {{ form_row(form.isPublic, { 'label': 'Is Public', 'attr': { 'class': 'block w-full px-3 py-2  placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:z-10 sm:text-sm p-4' } }) }}

    {{ form_row(form.new_comment, {  'attr': { 'class': 'block w-full px-3 py-2  placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:z-10 sm:text-sm p-4' } }) }}
</div>

<div>
    <button type="submit"
            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
