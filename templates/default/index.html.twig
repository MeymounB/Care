{% extends "base.html.twig" %}

{% block title %}Greencare - Votre expert botanique{% endblock %}

{% block body %}
    {% set baseAlt = 'Hero section - icon' %}
    <section class="section landing">
        <div>
            <h1 class="main-title">L’application N°1 pour garder tes plantes </h1>
            <p class="reg-bold">GreenCare : au service de la santé de vos plantes</p>
        </div>

        <div class="landing_links">
            <a href="{{ path('app_login') }}">
                <button class="btn btn-primary">
                    Se connecter
                </button>
            </a>
            <a href="{{ path('register_particular') }}">
                <button class="btn btn-secondary">
                    S'inscrire
                </button>
            </a>
        </div>

        <ul class="landing_feats">
            {% for link in links %}
                <li>
                    <img src="{{ asset('images/' ~ link['img']) }}" alt="{{ baseAlt }} of a {{ link['alt'] }}">
                    <p>{{ link['text'] }}</p>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}

{% block footer %}{% endblock %}