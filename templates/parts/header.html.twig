{# DESKTOP HEADER #}
<header>
    {# <a href="{{ path('app_individual_index') }}">
      <img class="greencare_logo" id="logo" src="{{ asset('images/logo.svg') }}" alt="greencare">
    </a> #}

    {% if app.user %}
        {% if is_granted('ROLE_PARTICULAR') %}
            <a href="{{ path('app_individual_index') }}">
                <img class="greencare_logo" id="logo" src="{{ asset('images/logo.svg') }}" alt="greencare">
            </a>
        {% elseif is_granted('ROLE_BOTANIST') %}
            <a href="{{ path('app_botanist_index') }}">
                <img class="greencare_logo" id="logo" src="{{ asset('images/logo.svg') }}" alt="greencare">
            </a>
        {% endif %}
    {% else %}
        <a href="{{ path('app_default') }}">
            <img class="greencare_logo" id="logo" src="{{ asset('images/logo.svg') }}" alt="greencare">
        </a>
    {% endif %}

    <input type="checkbox" id="header_toggle">
    <label for="header_toggle" class="header_burger">
        {% include 'parts/burger.html.twig' %}
    </label>

    <nav class="header_nav">
        <a href="{{ path('app_default') }}">Accueil</a>
        <a href="{{ path('app_logout') }}">Logout</a>
        {# <a href="#">A propos</a> #}
        {# <button class="btn btn-secondary" id="download">Télécharger</button> #}
    </nav>
</header>