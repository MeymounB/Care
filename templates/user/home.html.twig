		<div class="bottom-banner">
			<div class="left">
				 <div class="historique">
					<h3>Besoin d'aide ?</h3>
					<div class="box-container">
						<a href="{{ path('app_appointment_new') }}" class="box">
							<img src={{ asset('images/plante1.jpg') }}>
							<p>Vos demandes de conseils</p>
						</a>
						<a href="{{ path('app_advice_new') }}" class="box">
							<img src={{ asset('images/plante1.jpg') }}>
							<p>Conseil en ligne</p>
						</a>
						<a href="{{ path('app_appointment_new') }}" class="box">
							<img src={{ asset('images/plante1.jpg') }}>
							<p>Prendre rendez-vous</p>
						</a>
					</div>
				</div>

				<div class="a-venir">
					<div class="top">
						<h3>Rendez-vous à venir</h3>
						<a href="{{ path('app_appointement_incoming_appointment') }}">Voir tous
							<img src={{ asset('images/right-arrow.png') }}>
						</a>
					</div>
					<div class="rdvs">
						{% for incomming_appointment in incomming_appointments %}
							<a href="{{ path('app_appointment_show', {'id': incomming_appointment.id}) }}" class="box">
								<p>{{ incomming_appointment.title }}</p>
								・
								{% if incomming_appointment.isPresential %}
									<p>Présentiel</p>
								{% else %}
									<p>En ligne</p>
								{% endif %}
								・
								<p>{{ incomming_appointment.plannedAt|date('d-m-Y | H:i') }}</p>
							</a>
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="recent">
				<div class="top">
					<h3>Activités récentes</h3>
					<a href="{{ path('app_advice_list_recent_advice') }}">Voir toutes
						<img src={{ asset('images/right-arrow.png') }}>
					</a>
				</div>

				<div class="activities">
					{% for recent in recent_activity %}
						<a href="{{ path('app_advice_show', {'id': recent.id}) }}" class="activity">
							<p>{{ recent.title }}</p>
							・
							{% if recent.isPublic %}
								<p>Public</p>
							{% else %}
								<p>Privé</p>
							{% endif %}
							・
							<p>{{ recent.createdAt|date('d-m-Y | H:i') }}</p>
						</a>
					{% endfor %}
				</div>
			</div>
		</div>
