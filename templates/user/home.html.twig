		{% if app.user.address is empty %}
			<p>
				Veuillez renseigner au moins une adresse pour pouvoir faire des demandes de rendez-vous. 
				<a href="{{ path('app.user.edit.address') }}">Cliquez ici.</a>
			</p>
		{% endif %}
		

		<div class="top-banner">
			<div class="take-rdv">
				<h3><a href="{{ path('app_advice_index') }}">Voir les demandes de conseils</a>
				</h3>
				<div class="rdvs">
					{% for advice in advices %}
						<a href="{{ path('app_advice_show', {'id': advice.id}) }}" class="box">
							<p>{{ advice.title }}</p>
							・
							<p>{{ advice.createdAt|date('d-m-Y') }}</p>
						</a>
					{% endfor %}
				</div>
			</div>
			<aside>
				<article class="statisique">
					<h3>Mes statistiques</h3>
					<div>
						<p>
							<span>Rendez-vous pris : </span>
							<span>{{ appointment_count }}</span>
						</p>
						<p>
							<span>Conseils donnés : </span>
							<span>{{ advice_count }}</span>
						</p>
					</div>

					<a href="/">Accéder à mon profil</a>
				</article>
