{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <h1 class="text-4xl mb-5">Appointment</h1>

    <table class="table-auto bg-white rounded-lg overflow-hidden w-full shadow-lg">
        <tbody>
        {% for field, value in {
            'Id': appointment.id,
            'Title': appointment.title,
            'Description': appointment.description,
            'CreatedAt': appointment.createdAt ? appointment.createdAt|date('Y-m-d') : '',
            'PlannedAt': appointment.plannedAt ? appointment.plannedAt|date('Y-m-d H:i:s') : '',
            'UpdatedAt': appointment.updatedAt ? appointment.updatedAt|date('Y-m-d') : '',
            'IsPresential': appointment.isPresential ? 'Yes' : 'No',
        } %}
            <tr class="{{ loop.index is odd ? 'bg-gray-100' : 'bg-white' }}">
                <th class="px-4 py-2 text-left text-gray-600">{{ field }}</th>
                <td class="px-4 py-2">{{ value }}</td>
            </tr>
            {% if field == 'IsPresential' and value == 'Yes' %}
                {% if appointment.address %}
                    <tr class="{{ loop.index is odd ? 'bg-gray-100' : 'bg-white' }}">
                        <th class="px-4 py-2 text-left text-gray-600">Address</th>
                        <td class="px-4 py-2">{{ appointment.address }}</td>
                    </tr>
                {% endif %}
            {% elseif field == 'IsPresential' and value == 'No' %}
                {% if appointment.link %}
                    <tr class="{{ loop.index is odd ? 'bg-gray-100' : 'bg-white' }}">
                        <th class="px-4 py-2 text-left text-gray-600">Link</th>
                        <td class="px-4 py-2">
                            <a href="{{ appointment.link }}">Link</a>
                        </td>
                    </tr>
                {% endif %}
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-5">
        {% if is_granted('ROLE_PARTICULAR') %}
            <a href="{{ path('app_appointment_index') }}"
               class="px-4 py-2 bg-blue-500 text-white rounded-lg shadow-md hover:bg-blue-700">back to list</a>

            <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}"
               class="px-4 py-2 bg-green-500 text-white rounded-lg shadow-md hover:bg-green-700">edit</a>

            <div class="px-4 py-2 bg-red-500 text-white rounded-lg shadow-md ">
                {{ include('appointment/_delete_form.html.twig') }}
            </div>

        {% else %}
            <a href="{{ path('app_botanist_appointments') }}">back to list</a>
        {% endif %}

        {% if appointment.status == "En attente" and is_granted('ROLE_BOTANIST') %}
            <button type="button" class="btn btn-primary">Prendre en charge le rendez-vous</button>
        {% endif %}
    </div>
{% endblock %}
