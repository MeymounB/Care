{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <h1 class="text-4xl mb-5">Appointment</h1>

    <table class="table-auto bg-white rounded-lg overflow-hidden w-full shadow-lg">
        <tbody>
            {% for field, value in {
                'Id': appointment.id,
                'Title': appointment.title,
                'Description': appointment.description,
                'Date': appointment.date ? appointment.date|date('Y-m-d H:i:s') : '',
                'CreatedAt': appointment.createdAt ? appointment.createdAt|date('Y-m-d') : '',
                'UpdatedAt': appointment.updatedAt ? appointment.updatedAt|date('Y-m-d') : '',
                'PlannedAt': appointment.plannedAt ? appointment.plannedAt|date('Y-m-d H:i:s') : '',
                'IsPresential': appointment.isPresential ? 'Yes' : 'No',
                'Adress': appointment.adress,
                'Link': appointment.link,
            } %}
                <tr class="{{ loop.index is odd ? 'bg-gray-100' : 'bg-white' }}">
                    <th class="px-4 py-2 text-left text-gray-600">{{ field }}</th>
                    <td class="px-4 py-2">{{ value }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="mt-5">
        <a href="{{ path('app_appointment_index') }}" class="px-4 py-2 bg-blue-500 text-white rounded-lg shadow-md hover:bg-blue-700">back to list</a>

        <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}" class="px-4 py-2 bg-green-500 text-white rounded-lg shadow-md hover:bg-green-700">edit</a>
        
        <div class="inline-block">
            {{ include('appointment/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
